{
  "name": "shell-executor",
  "version": "1.0.0",
  "description": "Web-based terminal emulator with PTY support for nano, tmux, etc.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "esbuild src/client/main.ts --bundle --sourcemap --format=esm --outfile=public/app.js --watch",
    "build": "esbuild src/client/main.ts --bundle --minify --format=esm --outfile=public/app.js",
    "ngrok": "ngrok http 3551"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-pty": "^1.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "esbuild": "^0.21.5",
    "sweetalert2": "^11.12.4",
    "typescript": "^5.5.4",
    "uhtml": "^4.5.3",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "keywords": [
    "shell",
    "command",
    "execute",
    "websocket",
    "terminal",
    "pty",
    "nano",
    "tmux"
  ],
  "author": "",
  "license": "MIT"
}

