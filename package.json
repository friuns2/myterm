{
  "name": "shell-executor",
  "version": "1.0.0",
  "description": "Web-based terminal emulator with PTY support for nano, tmux, etc.",
  "main": "shell-executor.js",
  "scripts": {
    "start": "node server.js",
    "ngrok": "ngrok http 3551",
    "build:client": "esbuild src/client/main.ts --bundle --outfile=public/assets/bundle.js --sourcemap --minify",
    "dev:client": "esbuild src/client/main.ts --bundle --outfile=public/assets/bundle.js --sourcemap --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-pty": "^1.0.0",
    "sweetalert2": "^11.14.0",
    "uhtml": "^5.0.9",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "esbuild": "^0.21.5",
    "typescript": "^5.5.4"
  },
  "keywords": [
    "shell",
    "command",
    "execute",
    "websocket",
    "terminal",
    "pty",
    "nano",
    "tmux"
  ],
  "author": "",
  "license": "MIT"
}
